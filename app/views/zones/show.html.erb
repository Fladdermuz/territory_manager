<div class="card">
    <div class="card-header card-header-top">
        <table class="table table-noborder table-nopadding">
            <tr>
                <td class="card-title no-border">
                    <h2>
                        <%= t :zones %>
                    </h2>
                </td>
                <td class="buttons">
                    <%= link_to raw("<icon class='fa fa-5x fa-home'></icon>"),zones_path, class: 'btn btn-primary btn-top2' %>

                    <%= link_to  raw("<icon class='fa fa-5x fa-edit'></icon>"),  edit_zone_path(@zone), class: 'btn btn-primary btn-top2' %>
                </td>
            </tr>
        </table>
    </div>
    <div class="card-block">

        <%if flash[:zone_notice]%>
        <div class="alert alert-success" role="alert">
            <%= flash[:zone_notice] %>
        </div>
        <%end%>

        <table class="table table-striped">
            <tr>
                <td>
                    <b><%=t :zone%>#
                        <%= @zone.zone_no %>
                    </b>
                </td>
                <td class='button'></td>
            </tr>
            <tr>
                <td>
                    <b><%=t :descriptiontion%></b>
                </td>
                <td><%= @zone.description %></td>
            </tr>

            <tr>
                <td colspan="2" data-no-turbolink='true'>
                    <%= link_to "#{t :coordinates}", {controller: 'coordinates', action: 'new_zone', zone_id: @zone.id}, class: 'left btn btn-primary',  data: { no_turbolink: true }%>

                  <%if @zone.coordinates.count < 2%>
                    <%=image_tag('arrow.png', class: 'arrow' )%>
                    <%=t :create_coords_help %>
                  <%end%>

                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <%= render 'map', zone: @zone, edit: 0 %>
                </td>
            </tr>
        </table>

    </div>
</div>
