<div class="card">
    <div class="card-header card-header-top">
        <table class="table table-noborder table-nopadding">
            <tr>
                <td class="card-title no-border">
                  <br />
                    <h2>
                        <%= t :zones %>
                    </h2>
                </td>
                <td>
                  <%= link_to raw("<icon class='fa fa-5x fa-plus-circle'></icon>"), new_zone_path, class: 'btn btn-primary btn-top' %>
                </td>
            </tr>
        </table>
    </div>
    <div class="card-block">


        <%@zones.each do |zone| %>

        <table class="table table-striped">
            <tr>

                <th><%=t :zone%></th>
                <th style='width:50%;'><%=t :descriptiontion%></th>
                <th><%=t :view%></th>
                <th><%=t :edit%>
                </th>
                <th><%=t :delete%>
                </th>
                <th><%=t :terrs_in_zone%>
                </th>
            </tr>
            <tr>
                <td class="zone"><%=h zone.zone_no %></td>
                <td class="descriptiontion"><%=h zone.description %></td>
                <td><%= link_to image_tag("view.png",:class=>"button",:size=>"26x26",:title=>"#{t :view}"), zone %></td>
                <td><%= link_to image_tag("edit.png",:class=>"button",:size=>"26x26",:title=>"#{t :edit}"), edit_zone_path(zone) %></td>
                <td><%= link_to image_tag("delete.png",:class=>"button",:size=>"26x26",:title=>"#{t :delete}"), zone, :confirm => "#{t :are_you_sure}", :method => :delete %></td>
                <td><%= link_to image_tag("samplestaticmap.png",:class=>"button",:size=>"50x26",:title=>"#{t :terrs_in_zone}"),:controller=>"territories",:action=>"index_zone", :zone_id=>zone.id %></td>
            </tr>
            <tr>
                <td colspan="6">
                    <%= render 'map', zone: zone, edit: 0 %>
                </td>
            </tr>
        </table>
        <% end %>

        <br/>

    </div>
</div>
