<div class="card">
    <div class="card-header card-header-top">
        <table class="table table-noborder table-nopadding">
            <tr>
                <td class="card-title no-border">
                    <h2>
                        <%= t :client%>
                    </h2>
                </td>
                <td class="buttons">
                    <%= link_to  raw("<icon class='fa fa-5x fa-eye'></icon>"), @client, class: 'btn btn-primary btn-top' %>
                </td>
            </tr>
        </table>
    </div>

    <div class="card-block">


        <%=render 'form', client: @client %>

    </div>
</div>
