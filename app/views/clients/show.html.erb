<div class="card">
    <div class="card-header card-header-top">
        <table class="table table-noborder table-nopadding">
            <tr>
              <td class="card-title no-border">
                <br>
                <h2>
                    <%=t :client%>
                </h2>
              </td>
                <td class="card-title no-border">
                    <%= link_to 'Edit', edit_client_path(@client), class: 'btn btn-primary btn-top' %>
                </td>
            </tr>
        </table>
    </div>
    <div class="card-block">

        <table class="table table-striped">
            <tr>
                <td>
                    <b>Congname:</b>
                </td>
                <td>
                    <%= @client.name %>
                </td>
            </tr>

            <tr>
                <td>
                    <b>Address:</b>
                </td>
                <td>
                    <%= @client.address %>
                </td>
            </tr>

            <tr>
                <td>
                    <b>City:</b>
                </td>
                <td>
                    <%= @client.city %>
                </td>
            </tr>

            <tr>
                <td>
                    <b>State:</b>
                </td>
                <td>
                    <%= @client.state %>
                </td>
            </tr>

            <tr>
                <td>
                    <b>Zip:</b>
                </td>
                <td>
                    <%= @client.zip %>
                </td>
            </tr>

            <tr>
                <td>
                    <b>Country:</b>
                </td>
                <td>
                    <%= @client.country.name %>
                </td>
            </tr>

            <tr>
                <td>
                    <b>Language:</b>
                </td>
                <td>
                    <%= @client.language %>
                </td>
            </tr>

        </table>
    </div>
</div>
