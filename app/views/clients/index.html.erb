
<div class="card">
  <div class="card-header-top">
    <h1>Clients
      <%= link_to 'New client', new_client_path, class: 'btn btn-warning btn-right' %>
    </h1>
  </div>
  <div class="card-block">




<table class="table table-striped">
  <tr>
    <th>Congname</th>
    <th>Address</th>
    <th>City</th>
    
    <th>Contact</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @clients.each do |client| %>
  <tr>
    <td> <%= client.name %> </td>
    <td> <%= client.address %> </td>
    <td> <%= client.city %> </td>
 <%if client.user.nil?%>
    <td> No User On Record</td>
    <%else%>
    <td> <%= client.user.email %></td>
    <%end%>
   
    
    <td><%= link_to image_tag("view.png",:class=>"button",:size=>"36x36",:title=>"#{t :view}"), client %></td>
    <td><%= link_to image_tag("edit.png",:class=>"button",:size=>"36x36",:title=>"#{t :edit}"), edit_client_path(client) %></td>
    <td><%= link_to image_tag("trash.png",:class=>"button",:size=>"36x36",:title=>"#{t :delete}"), client, :confirm => "#{t :are_you_sure}", :method => :delete %></td>
  </tr>
<% end %>
</table>

 </div>
  </div>

