<div class="card">
  <div class="card-header">
    <h1><%=t :new_territory%></h1>
  </div>

  <div class="card-block">

    <%= form_for(@territory) do |f| %>

    <table class="table table-striped">
      <tr>
        <td><%=t :territory_number%></td>
        <td> <%= f.text_field :territory_no, class: 'txt-field' %></td>
      </tr>
      <tr>
        <td><%=t :description%></td>
        <td> <%= f.text_area :descrip, :class=>"txt-field" %> </td>
       </tr>
      <tr>
        <td><%=t :notes%></td>
        <td><%= f.text_area :notes, class: 'txt-field' %></td>
      </tr>
      <tr>
        <td><%=t :zone%></td>
        <td><%=  f.select(:zone_id, Zone.where(congregation_id: session[:congid]).collect {|c| [ c.zone_no, c.id ] },{}, {class: 'sel-field'} ) %> </td>
       </tr>
      <tr>
        <td><%=t :center_coordinate%></td>
        <td><%= f.text_field :center_coordinate ,class: 'txt-field' %></td>
      </tr>
       <tr>
         <td><%=t :zoom%></td>
         <td><%= f.select(:zoom,([['1','12'], ['2','13'],['3','14'],['4','15'],['5','16'],['6','17'],['7','18'],['8','19']]),{}, {class: 'sel-field'} )%> </td>
       </tr>
      <tr>
        <td> <%=t :maptype%></td>
        <td><%= f.select(:maptype,([['roadmap'], ['hybrid'],['satellite'],['terrain']]),{}, {class: 'sel-field'} )%></td>
      </tr>
      <tr>
        <td> <%=t :fill_color%></td>
        <td> <%= f.select :color, { "Black" => "black","Blue" => "blue","Red" => "red","Green" => "green","None" => "0x00000000"},{},{class: 'sel-field'} %> </td>
      </tr>
      <tr>
        <td><%=t :border_color%></td>
        <td><%= f.select :border_color, { "Black" => "black","Blue" => "blue","Red" => "red","Green" => "green","None" => "0x00000000"},{},{class: 'sel-field'} %> </td>
       </tr>
      <tr>
        <td> <%= f.hidden_field(:is_dynamic,:value => true) %>
             <%= f.hidden_field(:congregation_id,:value => session[:congid]) %>
             <%= f.submit "#{t :next}", class: 'btn btn-primary' %>
        </td>
        </tr>
        </table>
<% end %>
 </div>
</div>