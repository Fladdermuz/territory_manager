<div class="card">
<div class="card-header">
<h1><%=t :new_territory %></h1>
</div>
<div class="card-block">


<%= form_for(@territory) do |f| %>
        <%= f.hidden_field(:congregation_id,:value => session[:congid]) %>
        <table class="table table-striped">
          <tr>
            <td>  <b><%=t :territory_number%></b> </td>
            <td> <%= f.text_field :territory_no,:class=>"txt-field" %></td>
           </tr>
          <tr>
            <td><b><%=t :description%></b></td>
            <td><%= f.text_area :descrip,:class=>"txt-area" %></td>
          </tr>
          <tr>
            <td> <b><%=t :notes%></b></td>
            <td> <%= f.text_area :notes,:class=>"txt-field" %></td>
          </tr>
          <tr>
            <td><b><%=t :zone%></b></td>
            <td><%=  f.select(:zone_id, Zone.where(congregation_id: session[:congid]).collect {|c| [ c.zone_no, c.id ] }) %> </td>
          </tr>
          <tr>
            <td><b><%=t :images%></b></td>
            <td><%= f.file_field :image %></td>
          </tr>
          <tr>
            <td colspan="2"> <%= f.submit "#{t :create}", class: 'btn btn-primary' %></td>
           </tr>
    </table>

<% end %>
</div>
</div>
