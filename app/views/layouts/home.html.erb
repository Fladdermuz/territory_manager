<!DOCTYPE html>
<html>
    <head>
        <title>Minman</title>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => false %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
        <%= csrf_meta_tags %>
    </head>
    <body>

        <header>

            <%= form_for User.new, url: "login/login" do |f| %>

            <div class='col-lg-6 col-md-6 col-sm-12 col-xs-12 top-div'>
                <%= render 'main/change_lang' %>
            </div>

            <div class='col-lg-6 col-md-6 col-sm-12 col-xs-12 top-div' style='text-align:right;'>
                <table style='float:right;'>
                    <tr>
                        <td>
                            <%= f.text_field :username, class: 'text-field-wide' %>
                        </td>
                        <td>
                            <%= f.password_field :password, class: 'text-field-wide'  %>
                        </td>
                        <td>
                            <%= f.submit "Login", class: 'btn btn-warning' %>
                        </td>
                    </tr>
                </table>
            </div>

            <% end %>
            <%=link_to "#{t :create_account}",{ controller: "clients", action: "new" }, class: 'btn btn-primary new_acct'%>
        </header>
        <%= yield %>

    </body>
</html>
