

<div class="card">
  <div class="card-header">

    <h1><%=t :address%></h1>

      <%if params[:notice] %>
       <p id="notice" class="notice"> <%= params[:notice] %> </p>
      <%end%>



  </div>

  <div class="card-block">

  <table class="table table-striped">

    <tr>
      <td><%=t :neighborhood %></td>
      <td><%= @address.neighborhood %> </td>
    </tr>
    <tr>
      <td> <%=t :house_number %></td>
      <td> <%= @address.house_no %> </td>
    </tr>
    <tr>
      <td><%=t :street %></td>
      <td><%= link_to("#{@address.street}",:controller=>"addresses",:action=>"index_street",:street => @address.street) %></td>
    </tr>
     <tr>
       <td> <%=t :apartment_number %></td>
       <td> <%=h @address.apt_no %></td>
     </tr>
    <tr>
      <td><%=t :city %></td>
      <td><%= @address.city %></td>
      </tr>
    <tr>
      <td><%=t :state %></td>
      <TD><%=h @address.state %></TD>
      </tr>
    <tr>
      <td><%=t :zip %></td>
      <td><%= @address.zip %></td>
    </tr>
    <tr>
      <td><%=t :call_date %></td>
      <td><%= @address.call_date %></td>
   </tr>
    <tr>
      <td><%=t :territory_number %></td>
      <td><%= @address.territory.territory_no %></td>
      </tr>
    <tr>
      <td><%=t :householders %></td>
      <td>

        <%@address.householders.each do |hh| %>
         <%if !hh.blank? %>

             <%= link_to "#{hh.fullname}",:controller => "householders", action: 'show',id: hh.id %><br>

         <%end%>
       <%end%>
       <%= link_to image_tag("householderadd.png",:title=>"#{t :add_householder_to_address}"),:controller=>'householders',action: 'new', :addressID => @address.id %>
       </td>
    </tr>
    <tr>
      <td>
        <% if  Congregation.find(session[:congid]).is_coordinate_only == true  %>
         <%=t :coordinate %>
         <%=@address.coordinate%>
         <%end%>
       </td>
      <td>
           <% if Congregation.find(session[:congid]).disable_all_google_maps == true || Congregation.find(session[:congid]).disable_terr_maps == true  %>

            <%else%>

            <%@territory = @address.territory%>
            <%= render partial: "territories/address_compared_territory", locals: { :territory=> @territory } %>

           <%end%>
</td>
      </tr>
    <tr>
      <td colspan="2">
        <%= link_to image_tag('edit.png'), edit_address_path(@address) %>
        </td>
      </tr>
    </table>


 </div>
 </div>
