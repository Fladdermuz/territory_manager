<% @territories = Territory.where(congregation_id: session[:congid]) %>
<%= select_tag "terr", options_from_collection_for_select(@territories, "id", "territory_no"), include_blank: true, style: 'font-size:10px;color:black;width:100%;', prompt: "#{t :add_new_to_to_territory}" %>


<script>
    $(function () {
        // bind change event to select
        $('#terr').bind('change', function () {
            var url = $(this).val();
            if (url) {


                window.location = "/addresses/new?territory_id=" + url; // redirect

            }
            return false;
        });
    });
</script>








<script>
    $("#terr").select2({
        theme: "bootstrap"
    });

</script>
