<%@map_layers = MapLayer.order(:name) %>

<%= select_tag "zone_map_layer_id",  options_from_collection_for_select(@map_layers, "id", "name", get_map_layer_id), style: 'width:100%;',name: 'zone[map_layer_id]', class: 'text-field', prompt: "#{t :map_type}"  %>

<script>
    $(function () {
        // bind change event to select
        $('#zone_map_layer_id').bind('change', function () {
            var url = $(this).val();
            if (url) {
                window.location = '/map_layers/set_layer?zone_id=<%=zone_id%>&map_layer_id=' + url; // redirect
            }
            return false;
        });
    });
</script>
